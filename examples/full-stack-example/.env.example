# Global environment variables for the full-stack example
# Copy this to .env and fill in your values

# Database Configuration (used by backend)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=better_auth_example

# Server Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-should-be-at-least-32-characters-long
BETTER_AUTH_URL=http://localhost:3000
APSO_BASE_URL=http://localhost:3001

# Docker Configuration
COMPOSE_PROJECT_NAME=better-auth-example

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug