{
  "name": "@apso/better-auth-apso-adapter",
  "version": "0.1.0",
  "description": "Better Auth database adapter that interfaces with Apso-generated CRUD REST endpoints",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:conformance": "jest --testPathPattern=conformance",
    "test:performance": "jest --testPathPattern=performance",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "better-auth",
    "adapter",
    "apso",
    "database",
    "authentication",
    "crud",
    "rest-api",
    "typescript"
  ],
  "author": "Mavric Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/apso.git",
    "directory": "packages/better-auth"
  },
  "bugs": {
    "url": "https://github.com/your-org/apso/issues"
  },
  "homepage": "https://github.com/your-org/apso/tree/main/packages/better-auth#readme",
  "peerDependencies": {
    "better-auth": "^0.11.0"
  },
  "dependencies": {
    "@apso/sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "better-auth": "^0.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}