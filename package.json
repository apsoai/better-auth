{
  "name": "@apso/better-auth-adapter",
  "version": "2.0.15",
  "description": "Better Auth database adapter that interfaces with Apso-generated CRUD REST endpoints",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "INTEGRATION_TESTS=true jest --selectProjects integration",
    "test:integration:with-env": "jest --selectProjects integration",
    "test:unit": "jest --selectProjects unit",
    "test:conformance": "jest --testPathPattern=conformance",
    "test:performance": "jest --selectProjects performance --passWithNoTests",
    "test:all-integration": "INTEGRATION_TESTS=true jest --selectProjects integration performance",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "semantic-release": "semantic-release",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "npm run ci"
  },
  "keywords": [
    "better-auth",
    "adapter",
    "apso",
    "database",
    "authentication",
    "crud",
    "rest-api",
    "typescript"
  ],
  "author": "Mavric Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apsoai/better-auth.git"
  },
  "bugs": {
    "url": "https://github.com/apsoai/better-auth/issues"
  },
  "homepage": "https://github.com/apsoai/better-auth#readme",
  "peerDependencies": {
    "better-auth": "^1.3.0"
  },
  "dependencies": {
    "@apso/sdk": "^1.0.6",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^13.1.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "better-auth": "^1.3.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
